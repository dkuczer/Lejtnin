    <!--  ----------------------------------------------------------------------  -->
    <apex:outputPanel rendered="{!IF(showSurvey, false, true)}" >
        <div class="slds-scope" >
            <div class="slds-grid slds-gutters slds-p-around_small" style="margin-top: 10%; margin-right: 0px; background-image: url('https://cdn.hipwallpaper.com/m/13/48/3DPGuF.jpg'); background-size: cover; background-position: center;   background-repeat: no-repeat;">
                <div style="margin-left: 40%; width: 19%; height: 430px; text-align: right; color: white; background-color:rgba(0,0,0,0.85);">
                    <form action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST">

                        <input type="hidden" name="oid" value="00D2o000000aRk5" />
                        <input type="hidden" name="retURL" value="https://ltsmusic-developer-edition.eu25.force.com/contactUs/" />

                        <label for="first_name">{!$Label.LTS_FirstName}</label><input class="slds-m-around_small" style="color: black;" id="first_name" maxlength="40" name="first_name" size="20" type="text" /><br/>
                        <label for="last_name">{!$Label.LTS_LastName}</label><input class="slds-m-around_small" style="color: black;" id="last_name" maxlength="80" name="last_name" size="20" type="text" /><br/>
                        <label for="company">{!$Label.LTS_Company}</label><input class="slds-m-around_small" style="color: black;" id="company" maxlength="40" name="company" size="20" type="text" /><br/>
                        <label for="mobile">{!$Label.LTS_Mobile}</label><input class="slds-m-around_small" style="color: black;" id="mobile" maxlength="40" name="mobile" size="20" type="text" /><br/>
                        <label for="email">{!$Label.LTS_Email}</label><input class="slds-m-around_small" style="color: black;" id="email" maxlength="80" name="email" size="20" type="text" /><br/>
                        <label for="country">{!$Label.LTS_Country}</label><input class="slds-m-around_small" style="color: black;" id="country" maxlength="40" name="country" size="20" type="text" /><br/>
                        <label for="city">{!$Label.LTS_City}</label><input class="slds-m-around_small" style="color: black;" id="city" maxlength="40" name="city" size="20" type="text" /><br/>
                        <label for="zip">{!$Label.LTS_Zip}</label><input class="slds-m-around_small" style="color: black;" id="zip" maxlength="20" name="zip" size="20" type="text" /><br/>
                        <div style="text-align: right; margin-right: 20px;">
                            <input type="submit" name="submit" style="color: black;"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
<!--        </div>-->

